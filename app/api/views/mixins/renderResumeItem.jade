//- resume item (i.e. a school, job, etc.)
//-   takes an object that has any of the optional properties `title`, `place`, `position`, `date`, `desc`
mixin renderResumeItem(item)
  fullSpan  = "span12"
  leftSpan  = "span8"
  rightSpan = "span4"

  hasTitle    = item.hasOwnProperty('title')
  hasLabel    = item.hasOwnProperty('label')
  hasSubtitle = item.hasOwnProperty('subtitle')
  hasDate     = item.hasOwnProperty('date')
  hasPlace    = item.hasOwnProperty('place')
  hasDesc     = item.hasOwnProperty('desc')

  .resume-item(id=item.id)
    //- title-row
    if(hasTitle)
      if (hasPlace)
        .row.title-row
          .col-sm
            h4.title!= item.title
          .col-sm
            h4.float-right.hidden-phone.place!= item.place
      else if (hasDate && !(hasSubtitle))
        .row.title-row
          .col-sm
            h4.title!= item.title
              if (hasLabel)
                span.badge.badge-info.hidden-phone!= item.label
          .col-sm
            span.hidden-phone.float-right.date!= item.date
      else
        .row.title-row
          .col-sm
            div(class=fullSpan)
              h4.title!= item.title
                if(hasLabel)
                  span.badge.badge-info.hidden-phone!= item.label
    //- subtitle-row
    if (hasSubtitle)
      if (hasPlace && hasDate)
        .row.subtitle-row
          .col-sm
            span.subtitle!= item.subtitle
              if(hasLabel)
                span.visible-phone.badge.badge-info!= item.label
                span.badge.badge-info.hidden-phone!= item.label
          .col-sm
            span.hidden-phone.float-right.date!= item.date
      else if (hasDate)
        .row.subtitle-row
          .col-sm
            span.subtitle!= item.subtitle
              if(hasLabel)
              span.visible-phone.badge.badge-info!= item.label
              span.label.badge-info.hidden-phone!= item.label
            .col-sm
            .col-sm
              span.hidden-phone.float-right.date!= item.date
              span.visible-phone.badge.date!= item.date
          .visible-phone.row.place-row
            .col-sm
              div.place(class=fullSpan)!= item.place
      else
        .row.subtitle-row
          .col-sm
            span.subtitle(class=fullSpan)!= item.subtitle
            if(hasLabel)
              span.visible-phone.badge.badge-info!= item.label
              span.badge.badge-info.hidden-phone!= item.label
          .visible-phone.row.place-row
            .col-sm
              div.place(class=fullSpan)!= item.place
    //- desc-row
    if (hasDesc)
      if (hasDate && !(hasSubtitle) && !(hasTitle))
        .row.desc-row.visible-phone
          .col-sm
            span.visible-phone.badge.date!= item.date
            div(class=fullSpan)!= item.desc
        .row.desc-row.hidden-phone
          .col-sm
            div(class=leftSpan)!= item.desc
            span.hidden-phone.float-right.date!= item.date
      else
        .row.desc-row
          .col-sm
            div(class=fullSpan)!= item.desc
